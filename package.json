{
  "name": "sirocco-wc-react-test",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": " yarn build:bundle",
    "build:bundle": "parcel build --public-url ./ src/main/ts/index.ts --dist-dir ./src/main/webapp/js",
    "css:build": "sirocco-wc buildCss",
    "css:watch": "sirocco-wc watchCss",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "prettier": "prettier \"src/main/ts/**/*.ts\" --fix --write",
    "mvnbuild": "yarn build",
    "test": "playwright test",
    "start": "yarn start:server",
    "start:server": "parcel index.html",
    ":add": "SWC_PREFIX=swc- sirocco-wc add"
  },
  "dependencies": {
    "@swc/helpers": "^0.4.11",
    "axios": "^0.27.2",
    "lit": "^2.3.1",
    "preact": "^10.11.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jsx": "^1.0.0",
    "react-to-webcomponent": "^2.0.0-alpha.0",
    "sirocco-wc": "0.0.32"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "^3.1.6",
    "@parcel/plugin": "^2.7.0",
    "@parcel/transformer-js": "^2.7.0",
    "@parcel/transformer-typescript-types": "2.7.0",
    "@playwright/test": "^1.26.0",
    "@types/jest": "^29.0.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "buffer": "^6.0.3",
    "concurrently": "^7.3.0",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "parcel-resolver-ts-base-url": "^1.1.5",
    "path": "^0.12.7",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "yarn": "^1.22.19"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "preact/jsx-dev-runtime": "preact/jsx-runtime"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/*.spec.js",
          "**/*.spec.jsx"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "off"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "singleAttributePerLine": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "src/main/ts/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browserslist": [
    "Chrome > 50"
  ]
}
